# =============================================================================
# Boto Production Environment Configuration
# =============================================================================
# 
# This file contains all environment variables needed to run Boto in production.
# Copy this file and populate with your actual values in HashiCorp Vault.
#
# IMPORTANT: These secrets should be stored in HashiCorp Vault and fetched
# automatically during deployment. DO NOT commit actual values to git.
#
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Node environment (production, staging, development)
NODE_ENV=production

# Application version (automatically set during build)
NEXT_PUBLIC_VERSION=latest

# Enable/disable SSL enforcement (set to true for production)
NOT_SECURED=false

# -----------------------------------------------------------------------------
# URLs and Domains
# -----------------------------------------------------------------------------

# Frontend URL (where users access the application)
FRONTEND_URL=https://your-domain.com

# Backend URL (public API endpoint)
NEXT_PUBLIC_BACKEND_URL=https://your-domain.com/api

# Backend internal URL (for internal service communication)
BACKEND_INTERNAL_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL=postgresql://boto_user:your_secure_password@postgres-host:5432/boto_db?schema=public

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------

# Redis connection URL for BullMQ and caching
# Format: redis://username:password@host:port
REDIS_URL=redis://redis-host:6379
REDIS_HOST=redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------

# JWT secret for token signing (generate a strong random string)
JWT_SECRET=your_very_long_and_secure_jwt_secret_here_minimum_32_characters

# NextAuth secret (if using NextAuth)
NEXTAUTH_SECRET=your_nextauth_secret_here

# Session secret
SESSION_SECRET=your_session_secret_here

# -----------------------------------------------------------------------------
# Email Configuration (Resend)
# -----------------------------------------------------------------------------

# Resend API key for sending emails
RESEND_API_KEY=re_your_resend_api_key

# Email from address
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_FROM_NAME=Boto

# -----------------------------------------------------------------------------
# File Upload & Storage
# -----------------------------------------------------------------------------

# Storage provider (s3, r2, local)
STORAGE_PROVIDER=s3

# AWS S3 / Cloudflare R2 Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_S3_ENDPOINT=https://your-endpoint.com

# Cloudflare R2 specific
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_BUCKET_URL=https://your-bucket.r2.cloudflarestorage.com

# Upload limits
UPLOAD_MAX_SIZE=100mb
UPLOAD_DIRECTORY=/uploads

# -----------------------------------------------------------------------------
# OAuth & Social Integrations
# -----------------------------------------------------------------------------

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Twitter/X
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Facebook
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
FACEBOOK_PIXEL_ACCESS_TOKEN=your_facebook_pixel_token
NEXT_PUBLIC_FACEBOOK_PIXEL=your_facebook_pixel_id

# LinkedIn
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Instagram
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# YouTube
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# TikTok
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Discord
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Slack
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret

# -----------------------------------------------------------------------------
# Payment Integration (Stripe)
# -----------------------------------------------------------------------------

# Stripe configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Pricing configuration
STRIPE_PRICE_ID_BASIC=price_basic_id
STRIPE_PRICE_ID_PRO=price_pro_id
STRIPE_PRICE_ID_ULTIMATE=price_ultimate_id

# -----------------------------------------------------------------------------
# AI Services (OpenAI, etc.)
# -----------------------------------------------------------------------------

# OpenAI API key for AI features
OPENAI_API_KEY=sk-your_openai_api_key

# ElevenLabs for voice generation
ELEVENSLABS_API_KEY=your_elevenlabs_api_key

# Kieai for video generation
KIEAI_API_KEY=your_kieai_api_key

# -----------------------------------------------------------------------------
# Video Processing (Transloadit)
# -----------------------------------------------------------------------------

# Transloadit for video processing
TRANSLOADIT_AUTH=your_transloadit_auth_key
TRANSLOADIT_SECRET=your_transloadit_secret
TRANSLOADIT_TEMPLATE_ID=your_template_id

# -----------------------------------------------------------------------------
# Newsletter Services
# -----------------------------------------------------------------------------

# Beehiiv
BEEHIIVE_API_KEY=your_beehiiv_api_key
BEEHIIVE_PUBLICATION_ID=your_publication_id

# Listmonk
LISTMONK_API_KEY=your_listmonk_api_key
LISTMONK_USER=your_listmonk_username
LISTMONK_DOMAIN=https://listmonk.your-domain.com
LISTMONK_LIST_ID=1
LISTMONK_WELCOME_TEMPLATE_ID=1

# -----------------------------------------------------------------------------
# Payment Gateway (NOWPayments for Crypto)
# -----------------------------------------------------------------------------

# NOWPayments for cryptocurrency payments
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_AMOUNT=99.99

# -----------------------------------------------------------------------------
# Monitoring & Error Tracking (Sentry)
# -----------------------------------------------------------------------------

# Sentry DSN for error tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_org
SENTRY_PROJECT=your_project

# Environment name for Sentry
SENTRY_ENVIRONMENT=production

# Sample rate for performance monitoring
SENTRY_TRACES_SAMPLE_RATE=0.1

# -----------------------------------------------------------------------------
# Analytics
# -----------------------------------------------------------------------------

# Google Analytics
NEXT_PUBLIC_GA_ID=G-YOUR_GA_ID

# Plausible Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# Rate Limiting & Throttling
# -----------------------------------------------------------------------------

# Rate limit configuration
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/disable specific features
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_AI_FEATURES=true
ENABLE_PAYMENT=true
ENABLE_CRYPTO_PAYMENT=false

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

# Log level (error, warn, info, debug, verbose)
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# -----------------------------------------------------------------------------
# PM2 Configuration
# -----------------------------------------------------------------------------

# Number of instances for PM2 cluster mode
PM2_INSTANCES=max

# -----------------------------------------------------------------------------
# Application Ports (Internal)
# -----------------------------------------------------------------------------

# Backend port
BACKEND_PORT=3000

# Frontend port
FRONTEND_PORT=4200

# Worker port
WORKER_PORT=3001

# Cron port
CRON_PORT=3002

